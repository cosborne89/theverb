<%= simple_form_for @post do |f| %>

    <%= f.input :title %><br />
    <%= f.association :author, :as => :hidden, :input_html => { :value => current_user.id } %>
    <%= f.association :homespace, :as => :hidden, :input_html => { :value => @user_homespace.id } %>
    <%= f.input :body %><br />
    <%= f.input :category, collection: ["Made It","Saw It","Love It"] %>
    <%= f.button :submit, :class => 'blue_button' %>
<% end %>



